<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	version="4.0">  
  <display-name>servletSite</display-name>
  <servlet>
  	<servlet-name>hellotext</servlet-name>
  	<servlet-class>com.itwill.servlet.HelloTextServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>gugudantext</servlet-name>
  	<servlet-class>com.itwill.servlet.GugudanTextServlet</servlet-class>
  </servlet>
  <!-- 
  <servlet>
  	<servlet-name>lifecycle_counter</servlet-name>
  	<servlet-class>com.itwill.servlet.LifeCycleCounterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>lifecycle_counter</servlet-name>
  	<url-pattern>/lifecycle_counter.do</url-pattern>
  </servlet-mapping>
  -->
  <servlet-mapping>
  	<servlet-name>hellotext</servlet-name>
  	<url-pattern>/hellotext.nhn</url-pattern>
  	<url-pattern>/hellotext.kakao</url-pattern>
  	<url-pattern>/hellotext.daum</url-pattern>
  	<url-pattern>/hellotext.sk</url-pattern>
  	<url-pattern>/hellotext</url-pattern>
  </servlet-mapping>
  
   <servlet-mapping>
  	<servlet-name>gugudantext</servlet-name>
  	<url-pattern>/gugudantext.do</url-pattern>
  	
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>